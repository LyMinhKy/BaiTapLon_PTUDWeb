@model IEnumerable<MyBTL.Model.Categories>
@{
    ViewBag.Title = "Trash";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section header{
    <link href="~/Public/css/jquery.dataTables.min.css" rel="stylesheet" />
}
@section footer{
    <script src="~/Public/js/jquery.dataTables.min.js"></script>
    <script>let table = new DataTable('#myTable');</script>
}

<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="col-md-6">
                        <strong class="text-danger">THÙNG RÁC</strong>
                    </div>
                    <div class="card-tools">
                        <a href="@Url.Action("Index","Category")" class="btn-sm btn-primary"><i class="fa fa-long-arrow-alt-left"></i>Quay lại</a>
                    </div>
                </div>
                <div class="card-body">
                    @*Hiện thị thông báo*@
                    @Html.Partial("Message")
                    <table class="table table-bordered table-striped" id="myTable">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>@Html.DisplayNameFor(model => model.Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Slug)</th>
                                <th>@Html.DisplayNameFor(model => model.ParentId)</th>
                                <th>@Html.DisplayNameFor(model => model.Order)</th>
                                <th>@Html.DisplayNameFor(model => model.MetaKey)</th>
                                <th>@Html.DisplayNameFor(model => model.MetaDesc)</th>
                                <th>Chức năng</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Slug)</td>
                                    <td>@Html.DisplayFor(modelItem => item.ParentId)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Order)</td>
                                    <th>@Html.DisplayNameFor(model => model.MetaKey)</th>
                                    <th>@Html.DisplayNameFor(model => model.MetaDesc)</th>
                                    <td>
                                        <a href="@Url.Action("Delete","Category", new { id = item.Id })" class="btn-sm btn-danger"><i class="fa fa-trash"></i></a>
                                        <a href="@Url.Action("Recover","Category" , new { id = item.Id })" class="btn-sm btn-success"><i class="fa fa-undo"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->
